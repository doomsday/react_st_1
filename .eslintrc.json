{
    "extends": [
        "google",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": [
        "es6-recommended",
        "react",
        "jsx"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "jsx/uses-factory": [
            1,
            {
                "pragma": "JSX"
            }
        ],
        "jsx/factory-in-scope": [
            1,
            {
                "pragma": "JSX"
            }
        ],
        "jsx/mark-used-vars": 1,
        "jsx/no-undef": 1
    }
}